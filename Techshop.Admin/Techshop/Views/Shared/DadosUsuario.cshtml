@{ var menusList = TempData["DadosUsuario"] as IEnumerable<Techshop.Model.Usuario>; }

@if (menusList != null)
{
     foreach (var item in menusList)
        { 
         <div class="header-right" >
              <div id="userbox" class="userbox" >
                  			        <a href="#" data-toggle="dropdown">
				        <figure class="profile-picture">
					        <img src="~/Images/Usuario.png"" alt="Joseph Doe" class="img-circle" data-lock-picture="assets/images/!logged-user.jpg" />
				        </figure>
                      
				        <div class="profile-info"  data-lock-name="John Doe" data-lock-email="johndoe@okler.com">
					     
                              <span class="name" >@item.DescricaoUsuario</span>
					       
				        </div>
			
				        <i class="fa custom-caret"></i>
			        </a>
			
			        <div class="dropdown-menu">
				        <ul class="list-unstyled">
					        <li class="divider"></li>
					        <li>
						        <a role="menuitem" tabindex="-1" href="/Acesso/Login/"><i class="fa fa-power-off"></i> Sair</a>
					        </li>
				        </ul>
			        </div>
		        </div>

         </div> 
      }
   
}

		