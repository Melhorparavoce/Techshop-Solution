@model Model.Techshop.Usuarios


<header class="page-header">
	<h2>Editar Usuarios</h2>
</header>      
<link rel="stylesheet" href="~/Content/assets/vendor/select2/css/select2.css" />
<link rel="stylesheet" href="~/Content/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>

<div class="panel-body">
         <div class="alert alert-danger" style="display:none" id="DivMensagemValidacao">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
             <span id="ConteudoErro" class="ConteudoErro"></span>
                
		</div>
        <div style="display:none" id="DivInner">
           
       </div>
       <div class="form-group" > 
                    <a href="/Usuarios/Index/"><strong>Retornar a Interface de Consulta</strong></a> 
        </div>
        <span class="ConteudoMensagemSucesso"></span>

        <div class="row">
		<div class="col-md-15">
			<section class="panel">
					<div class="panel-body">
						<div class="form-group">
							<label class="col-sm-2 control-label"><span class="required">*</span>Usuário: </label>
							<div class="col-sm-5">
								<input type="text"   id="Usuario"  value="@Model.DescricaoUsuario"  class="form-control" maxlength="70"  >
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label"><span class="required">*</span>Email: </label>
							<div class="col-sm-5">
							     <input type="text"  id="Email"  value="@Model.DescricaoEmail" class="form-control" maxlength="70"  >
							</div> 
						</div>
                        <div class="form-group">
							    <label class="col-sm-2 control-label"><span class="required">*</span>Login: </label>
						    <div class="col-sm-2">
						        <input type="text"  id="Login" value="@Model.DescricaoLogin" class="form-control" maxlength="70"  >
						    </div>
                         </div>
                          <div class="form-group">
							    <label class="col-sm-2 control-label"><span class="required">*</span>Senha: </label>
							<div class="col-sm-2">
						        <input type="text"  id="Senha" value="@Model.DescricaoSenha"  class="form-control" maxlength="70"  >
						    </div>
                        </div>
                       
                        <div class="form-group">
							    <label class="col-sm-2 control-label"><span class="required">*</span>Data Expiração: </label>
							<div class="col-sm-2">
						        <input type="text"  id="DataExpiracao" value="@Model.DataExpiracaoString"  class="form-control" maxlength="70"  >
						    </div>
                        </div>
                         <div class="form-group">
									<label class="col-md-2 control-label" for="inputSuccess"><span class="required">*</span>Perfil</label>
									<div class="col-md-4">
										<select class="form-control mb-md" id="SelectPerfil">
										    <option value="2">Empresa</option>
                                            <option value="3">Aluno</option>
										</select>
									</div>
								</div>
                      </div>
                        <input type="hidden" id="CodigoUsuario" value="@Model.CodigoUsuario" />
                
					<footer class="panel-footer">
                        <input type="submit" name="SaveData" id="btnUpdate" value="Salvar" class="btn btn-primary" />
										
					</footer>
                   
		  </section>							
		</div>
</div>

<script type="text/javascript" src="@Url.Content("~/Scripts/Forms/Usuarios.js")"></script>


